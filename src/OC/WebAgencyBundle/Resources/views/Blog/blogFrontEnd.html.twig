{% extends '::base.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/postList.css') }}">
{% endblock %}

{% block body %}
    {% include '@OCWebAgency/Navigation/frontEnd.html.twig' %}
    <div  class="container ">
        <h1 class="flow-text btn-large white-text">Blog de l'agence LEON</h1>
    </div>

    <div class="container">
        <h1>Listing des articles</h1>
    </div>
    <hr/>

    {# total items count #}
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>

    <table>



    <div class="container">

        {% for page in pagination %}
        <div class="row">
            <br/>

            <div class="container col-md-12">
                <h4 class="">{{ page.title }}</h4>
            </div>

            <div class="col-md-4 col-sm-12">
                 <img src="{{ asset('uploads/images/' ~ page.image) }}" class="img-responsive" alt="{{ page.title }}"/>
                 <br>
            </div>
            <div>
                <a class="btn btn-success col-md-2" href="{{ path('oc_web_agency_completepost',{'id': page.id }) }}">Article complet</a>
            </div>

            <div class="col-md-8 col-sm-12">
                    {{ page.content|slice(0,500)|raw }}...
            </div>

                <br/>
            <hr>
        </div><!-- end div row -->
        {% endfor %}
    </div>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}