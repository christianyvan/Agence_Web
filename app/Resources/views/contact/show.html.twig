{% extends 'base.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/adminContact.css') }}">
{% endblock %}
{% block body %}
    {% include '@OCWebAgency/Navigation/backEnd.html.twig' %}



    <h1>Contact</h1>

    <div class="container">

            <div class="row">
                <div class="col-md-2 ">
                    <a class=" btn  btn-success btn-block" href="{{ path('admin_contact_index') }}">Back to the list</a>
                </div>
                <div class="col-md-1 ">
                    <a class=" btn btn-info  btn-block" href="{{ path('admin_contact_edit', { 'id': contact.id }) }}">Edit</a>
                </div>
                <div class="col-md-1">
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger  btn-block" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>



    <div class="table table-responsive">
        <table class="table table-striped table-bordered ">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ contact.id }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ contact.lastName }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ contact.firstName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ contact.email }}</td>
                </tr>
                <tr>
                    <th>Object</th>
                    <td>{{ contact.object }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ contact.message }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <br>
    </div>

{% endblock %}
