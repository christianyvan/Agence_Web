{% extends 'base.html.twig' %}
{% block css %}
<link rel="stylesheet" href="{{ asset('css/postList.css') }}">
{% endblock %}

{% block body %}
    {% include '@OCWebAgency/Navigation/backEnd.html.twig' %}
    <h1>Posts list</h1>

    <br><br>


        {% for post in posts %}
     <a class="btn btn-success col-md-2" href="{{ path('admin_post_new') }}">Create a new post</a>
     <a class="btn  btn-info col-md-2 col-md-offset-1" href="{{ path('admin_post_show', { 'id': post.id }) }}">show</a>
     <a class="btn  btn-success col-md-2 col-md-offset-1" href="{{ path('admin_post_edit', { 'id': post.id }) }}">edit</a>
            <br><br>
    <div class="table-responsive">
         <table class="table table-striped table-bordered">

            <tr>
                 <th>Id</th>
                 <td><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
            </tr>
            <tr>
                 <th>Title</th>
                 <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content|slice(0,300)|raw }}</td>
            </tr>
            <tr>
                <th>Category</th>
                {% if post.category is not null %}
                    <td>{{ post.category.name }}</td>
                {% endif %}
            </tr>
            <tr>
                 <th>Email</th>
                 <td>{{ post.email }}</td>
            </tr>
            <tr>
                 <th>Image</th>
                 <td>{{ post.image }}</td>
            </tr>
            <tr>
                 <th>Date</th>
                 <td>{% if post.date %}{{ post.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                 <th>Isposted</th>
                 <td>{% if post.isPosted %}Yes{% else %}No{% endif %}</td>
            </tr>

         </table>
    </div>

        {% endfor %}






{% endblock %}
